                                    var indicatorSets = (Dictionary<string, string>)Session["UserInputI"];
                                    var iKey = "I" + ind.Id.ToString();

                                    if (indicatorSets.ContainsKey(iKey))
                                    {
                                        var selectedValue = Convert.ToInt32(indicatorSets[iKey]);

                                        if (selectedValue > 3)
