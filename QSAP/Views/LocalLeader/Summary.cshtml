                                                @foreach (var r in Model.ratings)
                                                {
                                                    if (r.Value.ToString() == selectedValue.ToString())
                                                    {
                                                        <td>@Html.RadioButton(iKey, r.Value, true, new { disabled = "disabled" })</td>
                                                    }
